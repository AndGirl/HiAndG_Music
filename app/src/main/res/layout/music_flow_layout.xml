<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/y6"
    android:paddingTop="@dimen/y6"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <com.bilibili.magicasakura.widgets.TintImageView
        android:id="@+id/pop_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x35" />

    <TextView
        android:layout_toRightOf="@+id/pop_list_view"
        android:id="@+id/pop_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x35"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

</RelativeLayout>